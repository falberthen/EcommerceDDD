{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "TokenIssuerSettings": {
    "Authority": "http://ecommerceddd-identityserver"
  },
  "Koalesce": {
    "OpenApiVersion": "3.0.1",
    "Info": {
      "Version": "v1",
      "Title": "Ecommerce DDD API Gateway",
      "Description": "API Gateway for the Ecommerce DDD application, aggregating multiple microservices into a single API endpoint."
    },    
    "Sources": [
      {
        "Url": "http://ecommerceddd-identityserver/swagger/v2/swagger.json",
        "ExcludePaths": [
          "/api/v2/accounts/register"
        ]
      },
      {
        "Url": "http://ecommerceddd-customer-management/swagger/v2/swagger.json",
        "VirtualPrefix": "/customerManagement",
        "ExcludePaths": [
          "/api/v2/customers/*/details",
          "/api/v2/customers/*/credit"
        ]
      },
      {
        "Url": "http://ecommerceddd-product-catalog/swagger/v2/swagger.json",
        "VirtualPrefix": "/productCatalog"
      },
      {
        "Url": "http://ecommerceddd-inventory-management/swagger/v2/swagger.json",
        "VirtualPrefix": "/inventoryManagement",
        "ExcludePaths": [
          "/api/v2/inventory/check-stock-quantity",
          "/api/v2/inventory/*/decrease-stock-quantity"
        ]
      },
      {
        "Url": "http://ecommerceddd-quote-management/swagger/v2/swagger.json",
        "VirtualPrefix": "/quoteManagement",
        "ExcludePaths": [
          "/api/v2/quotes/*/confirm",
          "/api/v2/quotes/*/details"
        ]
      },
      {
        "Url": "http://ecommerceddd-order-processing/swagger/v2/swagger.json",
        "VirtualPrefix": "/orderProcessing"
      }
    ],
    "MergedEndpoint": "/swagger/v2/apigateway.yaml",
    "MergeReportEndpoint": "/koalesce/report.html",
    "ApiGatewayBaseUrl": "http://localhost:5000",
    "Cache": {
      "MinExpirationSeconds": 10,
      "SlidingExpirationSeconds": 10
    }
  }
}